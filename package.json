{
  "engines": {
    "node": ">=20.6.0"
  },
  "name": "multisite-server",
  "version": "1.0.0",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "build": "rm -rf ./dist && npm run typecheck && npm run lint && swc src --out-dir dist && npm run copy-assets",
    "build-aws": "rm -rf ./dist && npm run typecheck && npm run lint && swc src --out-dir dist && cp -r ./src/views dist",
    "start": "pm2-runtime start dist/index.js",
    "dev": "tsx watch ./src/index.ts | pino-pretty",
    "copy-assets": "cp -r ./src/views dist && rm -rf ./dist/views/sites && mkdir ./dist/views/sites && dotenv -- cross-var cp -r ./src/views/sites/%SITE_CODE% ./dist/views/sites/%SITE_CODE%",
    "typecheck": "tsc",
    "lint": "eslint --ext .ts src/",
    "lint-fix": "eslint --fix --ext .ts src/",
    "prettify": "prettier ./**.{ts,js,tsx,cjs,mjs,json} --write",
    "heroku-postbuild": "echo Skip build on Heroku"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fastify/autoload": "^5.10.0",
    "@fastify/cookie": "^9.4.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.3.0",
    "@fastify/static": "^7.0.4",
    "@fastify/view": "^9.1.0",
    "@sentry/node": "^8.30.0",
    "@sentry/profiling-node": "^8.30.0",
    "cross-var": "^1.1.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "ejs": "^3.1.10",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "hex-to-rgba": "^2.0.1",
    "http-status-codes": "^2.3.0",
    "nanoid": "^5.0.7",
    "node-cache": "^5.1.2",
    "pm2": "^5.4.2"
  },
  "devDependencies": {
    "@swc/plugin-transform-imports": "^3.0.2",
    "@types/ejs": "^3.1.5",
    "@types/fastify-multipart": "^0.7.0",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^9.1.1",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "swc": "^1.0.11",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "heroku-run-build-script": true
}
